<?xml version="1.0" encoding="UTF-8"?>		
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">		

       <!-- General settings -->
       <PreferenceCategory android:key="general_category"
       android:title="@string/general_title">

	<!-- Launcher App -->
        <PreferenceScreen android:key="settings_launcher"
                android:title="@string/settings_launcher"
                android:summary="@string/settings_launcher_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.savagedzen.szparts"
                    android:targetClass="com.savagedzen.szparts.activities.LauncherActivity" />
        </PreferenceScreen>
       <!-- Notification Power Widget Settings -->
        <PreferenceScreen android:key="ui_power_widget_settings_menu"
           android:title="@string/title_expanded_widget"
           android:summary="@string/summary_expanded_widget">
           <intent android:action="android.intent.action.MAIN"
               android:targetPackage="com.savagedzen.szparts"
               android:targetClass="com.savagedzen.szparts.activities.UIPowerWidgetActivity" />
        </PreferenceScreen>	

        <CheckBoxPreference
	  android:key="pref_use_screenon_anim"
	  android:title="@string/title_use_screenon_anim"
	  android:summaryOn="@string/summary_on_use_screenon_anim"
	  android:summaryOff="@string/summary_off_use_screenon_anim" />

	<CheckBoxPreference
	  android:key="pref_use_screenoff_anim"
	  android:title="@string/title_use_screenoff_anim"
	  android:summaryOn="@string/summary_on_use_screenoff_anim"
	  android:summaryOff="@string/summary_off_use_screenoff_anim" />

    </PreferenceCategory>
</PreferenceScreen>
