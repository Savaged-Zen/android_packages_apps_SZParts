<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- UI Settings -->
        <PreferenceScreen android:key="ui_settings"
                android:title="@string/title_expanded_ui"
                android:summary="@string/summary_expanded_ui">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.savagedzen.szparts"
                    android:targetClass="com.savagedzen.szparts.activities.UIActivity" />
        </PreferenceScreen>	
        <!-- CPU Settings -->
        <PreferenceScreen android:key="cpu_settings" android:title="@string/cpu_title" android:summary="@string/cpu_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.savagedzen.szparts"
                android:targetClass="com.savagedzen.szparts.activities.CPUActivity" />
        </PreferenceScreen>
        <!-- Kernel Settings -->
        <PreferenceScreen android:key="kernel_settings" android:title="@string/kernel_title" android:summary="@string/kernel_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.savagedzen.szparts"
                android:targetClass="com.savagedzen.szparts.activities.KernelActivity" />
        </PreferenceScreen>
        <!-- Quiet Hours -->
        <PreferenceScreen android:key="sound_category_quiet_hours" android:title="@string/sound_category_quiet_hours_title" android:summary="@string/sound_category_quiet_hours_summary">
            <intent android:action="android.intent.action.MAIN"
		android:targetPackage="com.savagedzen.szparts"
		android:targetClass="com.savagedzen.szparts.activities.SoundQuietHoursActivity" />
	</PreferenceScreen>
       <!-- Change Log -->
        <PreferenceScreen android:key="changelog"
            android:title="@string/changelog_title">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.savagedzen.szparts"
                android:targetClass="com.savagedzen.szparts.activities.ChangeLog" />
        </PreferenceScreen>
        <!-- Credits -->
        <PreferenceScreen android:key="credits"
            android:title="@string/credits_title">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.savagedzen.szparts"
                android:targetClass="com.savagedzen.szparts.activities.Credits" />
        </PreferenceScreen>
</PreferenceScreen>
